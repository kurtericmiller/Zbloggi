    <?php if ($this->pageCount): ?>
    <div class="paginationControl clearfix">
    <!-- Previous page link -->
    <?php if (isset($this->previous)): ?>
      <a href="<?php echo $this->url(array('page' => $this->previous)); ?>">
        &laquo; Previous
      </a> 
    <?php else: ?>
      <span class="disabled">&laquo; Previous</span>
    <?php endif; ?>
     
    <!-- Numbered page links -->
    <?php foreach ($this->pagesInRange as $page): ?>
      <?php if ($page != $this->current): ?>
        <a class="pageNum" href="<?php echo $this->url(array('page' => $page)); ?>">
            <?php echo $page; ?>
        </a> 
      <?php else: ?>
        <?php echo '<span class="disabled">&nbsp;' . $page . '</span>' ; ?>
      <?php endif; ?>
    <?php endforeach; ?>
     
    <!-- Next page link -->
    <?php if (isset($this->next)): ?>
      <a href="<?php echo $this->url(array('page' => $this->next)); ?>">
        Next &raquo;
      </a>
    <?php else: ?>
      <span class="disabled">&nbsp;Next &raquo;</span>
    <?php endif; ?>
    </div>
    <?php endif; ?>
